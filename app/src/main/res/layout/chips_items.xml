<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/chip_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_extra_small"
        android:background="@drawable/chip_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/margin_extra_small"
        android:paddingStart="@dimen/margin_extra_small">

        <TextView
            android:id="@+id/tv_chip_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_extra_small"
            android:text="sushi"
            android:textColor="@color/font_color" />

        <ImageButton
            android:id="@+id/btn_chip_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_cancel" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chip_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_extra_small"
        android:background="@drawable/chip_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/margin_extra_small"
        android:paddingStart="@dimen/margin_extra_small">

        <TextView
            android:id="@+id/tv_chip_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_extra_small"
            android:text="hamburger"
            android:textColor="@color/font_color" />

        <ImageButton
            android:id="@+id/btn_chip_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_cancel" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chip_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_extra_small"
        android:background="@drawable/chip_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/margin_extra_small"
        android:paddingStart="@dimen/margin_extra_small">

        <TextView
            android:id="@+id/tv_chip_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_extra_small"
            android:text="steak"
            android:textColor="@color/font_color" />

        <ImageButton
            android:id="@+id/btn_chip_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_cancel" />
    </LinearLayout>
</LinearLayout>